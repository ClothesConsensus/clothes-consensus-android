<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/example_user_thumb"
        />

    <ImageView
        android:id="@+id/ivDialogueBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivThumbnail"
        android:layout_alignBottom="@+id/ivThumbnail"
        android:layout_alignTop="@+id/ivThumbnail"
        android:layout_alignParentRight="true"
        android:src="@drawable/dialogue_box"
        android:scaleType="fitXY"
        android:layout_marginLeft="-10dp"
        />
    <EditText
        android:id="@+id/etMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivDialogueBox"
        android:layout_alignBottom="@+id/ivDialogueBox"
        android:layout_alignRight="@+id/ivDialogueBox"
        android:layout_alignLeft="@+id/ivDialogueBox"
        android:layout_marginLeft="25dp"
        android:background="@android:color/transparent"
        android:textColor="@color/blackTextColor"
        android:hint="@string/add_your_caption_here"
        />
</RelativeLayout>
</layout>