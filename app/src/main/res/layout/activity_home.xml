<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.mysimpletweets.activity.TimelineActivity"
    tools:showIn="@layout/activity_home">
        <include
            layout="@layout/home_activity_toolbar"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/actionBarHeight"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvLooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
        />
        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:visibility="invisible"
            android:layout_marginTop="69dp"
            />

        <include
            layout="@layout/notification_banner"
            android:layout_below="@+id/toolbar"
            android:id="@+id/rlNotificationBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/notificationBannerHeight"
            />
    </RelativeLayout>
</layout>
